      "listen_port": 10808
    },
    {
      "type": "http",
      "tag": "xhttp-in",
      "listen": "127.0.0.1",
      "listen_port": 8080
    }
  ],

  "outbounds": [
    {
      "type": "vless",
      "tag": "vpn",
      "server": "64.188.92.202",
      "server_port": 443,
      "uuid": "72afd9d8-292c-40e3-8da8-a54796f41b14",
      "flow": "xtls-rprx-vision",
