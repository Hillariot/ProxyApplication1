        "address_resolver": "cloudflare-doh"
      }
    ],
    "rules": [
      {
        "rule_set": "ads",
        "action": "reject"
      } // ← DNS-запросы к рекламе режем на этапе резолва
    ]
  },

  "route": {
    "auto_detect_interface": false,
    "final": "vpn",

    "rule_set": [
      {
        "type": "local",
        "tag": "ads",
        "format": "binary",
        "path": "/data/user/0/Company.Hillariot.BarbarisProxy/files/geosite-category-ads-all.srs"
      }
    ],

    "rules": [
      {
        "inbound": "xhttp-in",
        "outbound": "vpn"
      },
      {
        "inbound": "local-socks",
        "outbound": "vpn"
      },

      {
        "protocol": "dns",
        "outbound": "vpn"
      },
      {
        "port": 53,
        "network": "udp",
        "outbound": "vpn"
      },

      {
